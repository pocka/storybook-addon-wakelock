{
  "name": "storybook-addon-wakelock",
  "version": "0.1.0",
  "description": "Storybook Addon enables you to activate WakeLock API through toolbar",
  "keywords": [
    "storybook-addons",
    "wakelock"
  ],
  "homepage": "https://github.com/pocka/storybook-addon-wakelock",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "types": "esm/index.d.ts",
  "files": [
    "cjs/**/*.js",
    "cjs/package.json",
    "esm/**/*.js",
    "esm/**/*.d.ts",
    "esm/package.json"
  ],
  "author": {
    "name": "Shota FUJI",
    "email": "pockawoooh@gmail.com"
  },
  "bugs": {
    "url": "https://github.com/pocka/storybook-addon-wakelock/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pocka/storybook-addon-wakelock.git"
  },
  "license": "Apache-2.0",
  "peerDependencies": {
    "@storybook/addons": "^6.5.8",
    "@storybook/api": "^6.5.8",
    "@storybook/components": "^6.5.8",
    "@storybook/core-events": "^6.5.8",
    "@storybook/theming": "^6.5.8",
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "dprint": "^0.30.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.7.4",
    "vitest": "^0.21.1",
    "wireit": "^0.7.1"
  },
  "scripts": {
    "build": "wireit",
    "build:esm": "wireit",
    "build:cjs": "wireit",
    "prepack": "npm run build",
    "fmt": "dprint fmt",
    "typecheck": "tsc --noEmit",
    "test": "vitest"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:esm",
        "build:cjs"
      ]
    },
    "build:esm": {
      "command": "tsc --build",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.(ts|tsx)",
        "tsconfig.json"
      ],
      "output": [
        "esm/**/*.(js|d.ts)",
        "esm/tsconfig.tsbuildinfo"
      ]
    },
    "build:cjs": {
      "command": "tsc --build tsconfig.cjs.json",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.(ts|tsx)",
        "tsconfig.json"
      ],
      "output": [
        "cjs/**/*.js",
        "cjs/tsconfig.tsbuildinfo"
      ]
    }
  }
}
