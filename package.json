{
  "name": "storybook-addon-wakelock",
  "version": "0.1.0",
  "description": "Storybook Addon enables you to activate WakeLock API through toolbar",
  "keywords": [
    "storybook-addons",
    "wakelock"
  ],
  "homepage": "https://github.com/pocka/storybook-addon-wakelock",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "types": "esm/index.d.ts",
  "files": [
    "preset.js",
    "cjs/**/*.js",
    "cjs/package.json",
    "esm/**/*.js",
    "esm/**/*.d.ts",
    "esm/package.json"
  ],
  "author": {
    "name": "Shota FUJI",
    "email": "pockawoooh@gmail.com"
  },
  "bugs": {
    "url": "https://github.com/pocka/storybook-addon-wakelock/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pocka/storybook-addon-wakelock.git"
  },
  "license": "Apache-2.0",
  "peerDependencies": {
    "@storybook/addons": "^6.5.8",
    "@storybook/api": "^6.5.8",
    "@storybook/components": "^6.5.8",
    "@storybook/core-events": "^6.5.8",
    "@storybook/theming": "^6.5.8",
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@storybook/addon-essentials": "^6.5.10",
    "@storybook/react": "^6.5.10",
    "@testing-library/react": "^13.0.0",
    "@types/dom-screen-wake-lock": "^1.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^2.0.1",
    "dprint": "^0.30.3",
    "happy-dom": "^6.0.4",
    "lint-staged": "^13.0.3",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "typescript": "^4.7.4",
    "vitest": "^0.21.1",
    "wireit": "^0.7.1"
  },
  "scripts": {
    "build": "wireit",
    "build:esm": "wireit",
    "build:cjs": "wireit",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "wireit",
    "prepack": "npm run build",
    "fmt": "dprint fmt",
    "typecheck": "tsc --noEmit",
    "test": "vitest"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:esm",
        "build:cjs"
      ]
    },
    "build:esm": {
      "command": "tsc --build tsconfig.esm.json",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.(ts|tsx)",
        "tsconfig.esm.json"
      ],
      "output": [
        "esm/**/*.(js|d.ts)",
        "esm/**/*.tsbuildinfo"
      ]
    },
    "build:cjs": {
      "command": "tsc --build tsconfig.cjs.json",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.(ts|tsx)",
        "tsconfig.cjs.json"
      ],
      "output": [
        "cjs/**/*.js",
        "cjs/**/*.tsbuildinfo"
      ]
    }
  },
  "build-storybook": {
    "command": "build-storybook",
    "files": [
      "cjs/**/*",
      "esm/**/*",
      "package.json",
      ".storybook/**/*"
    ],
    "output": [
      "storybook-static/**/*"
    ]
  }
}
